<%- include('../partials/head.ejs') %>

<h1 class="user-form-header">Edit Artist</h1>

<form action="/artists/<%=artist._id %>" method="post">
  <div class="form-group">
    <label for="name">Artist Name:</label>
    <input type="text" name="name" id="name" required value="<%= artist.name %>"/>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea name="description" id="description" cols="30" rows="5"><%=artist.description%></textarea>
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <select name="category" id="category">
      <option value="Band" <%= artist.category === 'Band' ? 'selected' : '' %> >Band</option>
      <option value="Comedian" <%= artist.category === 'Comedian' ? 'selected' : '' %> >Comedian</option>
      <option value="Hypnotist" <%= artist.category === 'Hypnotist' ? 'selected' : '' %> >Hypnotist</option>
      <option value="Other" <%= artist.category === 'Other' ? 'selected' : '' %> >Other</option>
    </select>
  </div>
  <div class="form-group">
    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" required placeholder="Rock, Country, Adult Humor, etc."value="<%= artist.genre %>"/>
  </div> 
  <div class="form-group">
    <label for="website">Website:</label>
    <input type="text" name="website" id="website" value="<%= artist.website%>"/>
  </div>
  <div class="form-group">
    <label for="photo">Photo Link:</label>
    <input type="text" name="photo" id="photo" value="<%= artist.photo %>"/>
  </div>
  <button type="submit">Update Artist</button>
</form>
<%- include('../partials/foot.ejs') %>

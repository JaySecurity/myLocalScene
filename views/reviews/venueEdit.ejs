<%- include('../partials/head.ejs') %>

<h1 class="user-form-header">Edit Review</h1>
<form action="/venues/<%= venueId %>/reviews/<%= review._id %>?_method=PUT" method="post">
  <div class="form-group">
    <label for="email">Rating:</label>
    <select name="rating" id="rating">
      <option value="1" <%= review.rating == '1' ? 'selected' : '' %> >1</option>
      <option value="2" <%= review.rating == '2' ? 'selected' : '' %> >2</option>
      <option value="3" <%= review.rating == '3' ? 'selected' : '' %> >3</option>
      <option value="4" <%= review.rating == '4' ? 'selected' : '' %> >4</option>
      <option value="5" <%= review.rating == '5' ? 'selected' : '' %> >5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="password">Review:</label>
    <textarea name="content" id="content" cols="30" rows="10"><%= review.content %></textarea>
  </div>
  <button type="submit">Update Review</button>
</form>
<%- include('../partials/foot.ejs') %>
